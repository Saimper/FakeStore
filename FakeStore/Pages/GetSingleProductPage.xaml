<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FakeStore.Pages.GetSingleProductPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout>
            
            <Image x:Name="ProductImage" HeightRequest="200" />
            <Label
                x:Name="ProductTitle"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                TextColor="Black" />
            <Label
                x:Name="ProductPrice"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="Green" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>