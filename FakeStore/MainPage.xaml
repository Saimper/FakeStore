<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FakeStore.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Densing #1  -->

    <ScrollView>
        <VerticalStackLayout>
            <Label
                Margin="0,20,0,40"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="Fake Store API"
                TextColor="#2E86C1" />

            <!--  Organización en dos columnas  -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto">

                <!--  Primera fila de botones  -->
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    BackgroundColor="#2E86C1"
                    Clicked="OnGetAllProductsClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Ver todos los productos"
                    TextColor="White"
                    WidthRequest="100" />

                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    BackgroundColor="#48C9B0"
                    Clicked="OnLimitResultsClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Limitar resultados"
                    TextColor="White"
                    WidthRequest="100" />

                <!--  Segunda fila de botones  -->
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    BackgroundColor="#F5B041"
                    Clicked="OnSortResultsClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Ordenar resultados"
                    TextColor="White"
                    WidthRequest="100" />

                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    BackgroundColor="#52BE80"
                    Clicked="OnGetAllCategoriesClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Ver todas las categorías"
                    TextColor="White"
                    WidthRequest="100" />

                <!--  Tercera fila de botones  -->
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    BackgroundColor="#AF7AC5"
                    Clicked="OnGetProductsInCategoryClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Productos por categoría"
                    TextColor="White"
                    WidthRequest="100" />

                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    BackgroundColor="#F1948A"
                    Clicked="OnAddNewProductClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Añadir nuevo producto"
                    TextColor="White"
                    WidthRequest="100" />

                <!--  Cuarta fila de botones  -->
                <Button
                    Grid.Row="3"
                    Grid.Column="0"
                    BackgroundColor="#E74C3C"
                    Clicked="OnUpdateProductClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Actualizar un producto"
                    TextColor="White"
                    WidthRequest="100" />

                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    BackgroundColor="#EC7063"
                    Clicked="OnDeleteProductClicked"
                    CornerRadius="0"
                    FontSize="16"
                    HeightRequest="100"
                    Text="Eliminar un producto"
                    TextColor="White"
                    WidthRequest="100" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
